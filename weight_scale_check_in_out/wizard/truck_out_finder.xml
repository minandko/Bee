<odoo>
    <record id="view_truck_out_finder_form" model="ir.ui.view">
        <field name="name">truck.out.finder.form</field>
        <field name="model">truck.out.finder</field>
        <field name="arch" type="xml">
            <form string="Truck Out">
                <sheet>
                    <group>
                        <group>
                            <field name="truck_number" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Find" type="object" name="find_truck" class="btn btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>